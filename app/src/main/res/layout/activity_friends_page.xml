<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nl.tudelft.bbw.view.FriendsPageActivity">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="9dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="50dp"
            android:weightSum="1"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="Congratulations! You just connected with" />

            <EditText
                android:id="@+id/senderName"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:background="@android:color/transparent"
                android:ems="20"
                android:inputType="textPersonName"
                android:paddingLeft="150dp"
                android:paddingRight="10dp"
                android:selectAllOnFocus="false"
                android:singleLine="false"
                android:text="Name"
                android:textColor="@android:color/holo_blue_dark" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:isIndicator="false"
                android:numStars="5"
                android:paddingLeft="50dp"
                android:rating="3" />

            <LinearLayout
                android:layout_width="399dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="103dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="IBAN:" />

                <EditText
                    android:id="@+id/editIban"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="22.56"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:selectAllOnFocus="false"
                    android:singleLine="false"
                    android:text="ibanDummy" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="224dp"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_weight="0.23">

                <Button
                    android:id="@+id/button3"
                    style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                    android:layout_width="171dp"
                    android:layout_height="99dp"
                    android:background="@android:color/holo_blue_light"
                    android:onClick="onAddThisPersonToContactList"
                    android:text="Add this person to your contact list" />

                <Button
                    android:id="@+id/button9"
                    style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
                    android:layout_width="167dp"
                    android:layout_height="104dp"
                    android:layout_weight="0.11"
                    android:background="@android:color/holo_blue_light"
                    android:backgroundTint="@android:color/holo_green_dark"
                    android:onClick="onViewContactListPage"
                    android:text="View this person contact list" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
